<?xml version="1.0" encoding="UTF-8"?><ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PMWorks.Pages.SelectHotelPage"NavigationPage.HasBackButton="False"xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" ios:Page.UseSafeArea="true"BackgroundColor="#eeeeee">    <NavigationPage.TitleView>        <OnPlatform x:TypeArguments="View">            <OnPlatform.iOS>                <StackLayout>                    <Label Text="PMWorks" FontSize="24" TextColor="White"            VerticalOptions="Center"            HorizontalOptions="Center">                        <Label.FontFamily>                            <OnPlatform x:TypeArguments="x:String">                                <On Platform="iOS" Value="CircularStd-Bold" />                                <On Platform="Android" Value="circularStd-Bold.otf#circular Std Bold" />                            </OnPlatform>                        </Label.FontFamily>                    </Label>                </StackLayout>            </OnPlatform.iOS>            <OnPlatform.Android>                <StackLayout>                    <Label Margin="0,0,40,0" Text="PMWorks" FontSize="24" TextColor="White"            VerticalOptions="Center"            HorizontalOptions="Center">                        <Label.FontFamily>                            <OnPlatform x:TypeArguments="x:String">                                <On Platform="iOS" Value="CircularStd-Bold" />                                <On Platform="Android" Value="circularStd-Bold.otf#circular Std Bold" />                            </OnPlatform>                        </Label.FontFamily>                    </Label>                </StackLayout>            </OnPlatform.Android>        </OnPlatform>    </NavigationPage.TitleView>    <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">        <Label HorizontalOptions="Center" Text="Please Select A Hotel" TextColor="#242126" FontSize="24" Margin="10,10">            <Label.FontFamily>                <OnPlatform x:TypeArguments="x:String">                    <On Platform="iOS" Value="CircularStd-Bold" />                    <On Platform="Android" Value="circularStd-Bold.otf#circular Std Bold" />                </OnPlatform>            </Label.FontFamily>        </Label>        <SearchBar x:Name="SearchBar" BackgroundColor="#F0F3F4" PlaceholderColor="#515C6F" TextChanged="SearchBar_TextChanged" >        </SearchBar>        <CollectionView x:Name="collview" ItemsSource="{Binding .}" SelectionMode="Single" SelectionChanged="Collview_SelectionChanged">            <CollectionView.ItemsLayout>                <GridItemsLayout Orientation="Vertical" Span="2"/>            </CollectionView.ItemsLayout>            <CollectionView.ItemTemplate>                <DataTemplate>                    <StackLayout>                        <Grid Margin="10,10">                            <Grid.RowDefinitions>                                <RowDefinition Height="*"/>                            </Grid.RowDefinitions>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="*"/>                            </Grid.ColumnDefinitions>                            <Frame CornerRadius="5" BackgroundColor="#FFFFFF" BorderColor="#00D6D8">                                <StackLayout Orientation="Vertical">                                    <Image Source="city.png" Grid.Row="0" Grid.Column="0"/>                                    <Label MaxLines="1" HorizontalTextAlignment="Center" Text="{Binding HotelName}" FontFamily="Rubik-Medium" FontSize="14" TextColor="Black" Grid.Row="0" Grid.Column="0">                                        <Label.FontFamily>                                            <OnPlatform x:TypeArguments="x:String">                                                <On Platform="iOS" Value="Rubik-Medium" />                                                <On Platform="Android" Value="Rubik-Medium.ttf#Rubik Medium" />                                            </OnPlatform>                                        </Label.FontFamily>                                    </Label>                                </StackLayout>                            </Frame>                        </Grid>                    </StackLayout>                </DataTemplate>            </CollectionView.ItemTemplate>            <CollectionView.EmptyView>                <StackLayout>                    <Label Text="No results" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />                </StackLayout>            </CollectionView.EmptyView>        </CollectionView>    </StackLayout></ContentPage>