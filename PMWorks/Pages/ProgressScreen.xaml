<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="PMWorks.Pages.ProgressScreen"
xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
ios:Page.UseSafeArea="true"
BackgroundColor="#eeeeee">
<NavigationPage.TitleView>
<StackLayout>
<Image Source="logo.png" Aspect="AspectFit"
VerticalOptions="Center"
HorizontalOptions="Center" />
</StackLayout>
</NavigationPage.TitleView>
<ContentPage.Content>
<StackLayout Orientation="Vertical" Margin="5,50,5,5">
<Frame HasShadow="true" CornerRadius="10" IsClippedToBounds="false" >
<StackLayout Orientation="Vertical">
<Label x:Name="hotelname" Text="Your Hotels" FontSize="Medium" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,20,0,0" />
<Label Text="This Week" FontSize="Medium" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,10,0,0" />
<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="0,0,0,0" >
<StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
<ImageButton Clicked="YellowOrdersClicked" BackgroundColor="Yellow" Aspect="AspectFit" WidthRequest="60" Margin="0,20,0,0" CornerRadius="30" HeightRequest="60"></ImageButton>
<Label Text="20" FontSize="Small" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,10,0,10" />
</StackLayout>
<StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
<ImageButton Clicked="GreenOrdersClicked" BackgroundColor="Green" Aspect="AspectFit" WidthRequest="60" Margin="0,20,0,0" CornerRadius="30" HeightRequest="60"></ImageButton>
<Label Text="10" FontSize="Small" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,10,0,10" />
</StackLayout>
<StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
<ImageButton Clicked="RedOrdersClicked" BackgroundColor="Red" Aspect="AspectFit" WidthRequest="60" Margin="0,20,0,0" CornerRadius="30" HeightRequest="60"></ImageButton>
<Label Text="5" FontSize="Small" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,10,0,10" />
</StackLayout>
<StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
<ImageButton Clicked="AllOrdersClicked" BackgroundColor="White" Aspect="AspectFit" WidthRequest="60" Margin="0,20,0,0" CornerRadius="30" HeightRequest="60"></ImageButton>
<Label Text="35" FontSize="Small" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,10,0,10" />
</StackLayout>
</StackLayout>
</StackLayout>
</Frame>
<Frame HasShadow="true" CornerRadius="10" IsClippedToBounds="false" Margin="5,40,0,5">
<StackLayout Orientation="Horizontal" Margin="0,0,0,0" HorizontalOptions="FillAndExpand" >
<StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
<Label Text="Progress :" FontSize="Medium" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,15,0,15" />
<Label Text="50%" Margin="0,15,0,15" TextColor="Black" FontSize="Medium" VerticalOptions="Center"></Label>
</StackLayout>
</StackLayout>
</Frame>
</StackLayout>
</ContentPage.Content>
</ContentPage>
