
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="PMWorks.Pages.SignatureUploadStatus"
NavigationPage.HasNavigationBar="false"
xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
ios:Page.UseSafeArea="true"
BackgroundColor="#eeeeee"
NavigationPage.HasBackButton="True">
<ContentPage.Content>
<StackLayout VerticalOptions="Center">
<ImageButton Source="updated_status" BackgroundColor="Transparent" VerticalOptions="Center" HorizontalOptions="Center" />
<Label Text="Status Updated"
TextColor="#242126" FontFamily="CircularStd-Bold" FontSize="24"
Margin="0,20,0,0"
HorizontalOptions="CenterAndExpand"/>
<Label Text="Your Status was updated successfully.For more details,check All Orders" TextColor="#242126" FontFamily="CircularStd-Regular" FontSize="16" 
Margin="20,20,20,20"
HorizontalOptions="Center"
VerticalOptions="Center"/>
<Button 
Text="Continue"
CornerRadius="25"
TextColor="White"
Margin="20,20,20,50"
Clicked="Continue_Clicked"
BackgroundColor="#00D6D8"/>
</StackLayout>
</ContentPage.Content>
</ContentPage>